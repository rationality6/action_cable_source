<p id="notice"><%= notice %></p>

<h1>Post Tests</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @post_tests.each do |post_test| %>
      <tr>
        <td><%= post_test.name %></td>
        <td><%= post_test.content %></td>
        <td><%= link_to 'Show', post_test %></td>
        <td><%= link_to 'Edit', edit_post_test_path(post_test) %></td>
        <td><%= link_to 'Destroy', post_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post Test', new_post_test_path %>
